            },
            {
                "name": "Rep. Andy Harris",
                "state": "MD",
                "party": "Republican",
                "donations": "Supported by pharmaceutical companies opposing marijuana legalization.",
                "record": "Led efforts in Congress to block D.C.'s marijuana decriminalization.",
                "source": "https://en.wikipedia.org/wiki/Andy_Harris_(politician)"
            },
            {
                "name": "Rep. Henry Cuellar",
                "state": "TX",
                "party": "Democrat",
                "donations": "Received contributions from private prison industry.",
                "record": "Voted against the Marijuana Opportunity Reinvestment and Expungement (MORE) Act.",
