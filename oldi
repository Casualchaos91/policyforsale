            },
            {
                "name": "Rep. Lamar Smith",
                "state": "TX",
                "party": "Republican",
                "donations": "Backed by law enforcement associations.",
                "record": "Blocked consideration of the Ending Federal Marijuana Prohibition Act of 2011.",
                "source": "https://en.wikipedia.org/wiki/Lamar_Smith"
            },
            {
                "name": "Rep. Darrell Issa",
                "state": "CA",
                "party": "Republican",
                "donations": "Supported by conservative advocacy groups.",
                "record": "Voted against amendments to protect state marijuana laws from federal interference.",
                "source": "https://en.wikipedia.org/wiki/Darrell_Issa"
            }
        ];

        function displayPoliticians(filteredPoliticians = politicians) {
            const list = document.getElementById("politicianList");
            list.innerHTML = "";
            filteredPoliticians.forEach(politician => {
                list.innerHTML += `
                    <div class="politician">
                        <h2 onclick="window.open('${politician.source}', '_blank')">${politician.name} (${politician.state}) - ${politician.party}</h2>
                        <p><strong>Donations:</strong> ${politician.donations}</p>
                        <p><strong>Voting Record:</strong> ${politician.record}</p>
                    </div>
                `;
            });
        }

        function searchPoliticians() {
            const query = document.getElementById("searchBar").value.toLowerCase();
            const filtered = politicians.filter(p => 
                p.name.toLowerCase().includes(query) ||
                p.state.toLowerCase().includes(query) ||
                p.party.toLowerCase().includes(query)
            );
            displayPoliticians(filtered);
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert("Copied to clipboard: " + text);
            });
        }

        displayPoliticians();  // Load initial list
    </script>

